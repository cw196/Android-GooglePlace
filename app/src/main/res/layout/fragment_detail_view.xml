<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/place_details_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="yes!!!"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="sans"
            android:padding="5dp"/>


        <TextView
            android:id="@+id/place_details_address_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/place_details_title"
            android:text="address: "
            android:layout_alignParentRight="true"
            android:layout_marginTop="1dip"
            />

        <TextView
            android:id="@+id/place_details_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/place_details_title"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="1dip"
            />

        <TextView
            android:id="@+id/place_detail_open_hours_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="open now: "
            android:layout_below="@id/place_details_address"
            android:layout_alignParentRight="true"
            android:layout_marginTop="1dip"/>


        <TextView
            android:id="@+id/place_detail_open_hours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/place_details_address"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="1dip"/>

        <TextView
            android:id="@+id/place_detail_types_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="place type: "
            android:layout_below="@id/place_detail_open_hours"
            android:layout_alignParentRight="true"
            android:layout_marginTop="1dip"/>

        <TextView
            android:id="@+id/place_detail_types"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/place_detail_open_hours"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="1dip"/>

        <Button
            android:id="@+id/wishPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Want visit place"
            android:onClick="UploadWishDatabase"
            android:layout_below="@id/place_detail_types"
            android:layout_alignParentLeft="true"/>
        <Button
            android:id="@+id/visitedPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already visited"
            android:onClick="UploadVisitedDatabase"
            android:layout_below="@id/place_detail_types"
            android:layout_alignParentRight="true"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="back"
            android:onClick="changeFragment"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            />
    </LinearLayout>

</ScrollView>
